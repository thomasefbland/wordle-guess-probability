		"autoprefixer": "^10.4.20",
		"gh-pages": "^6.2.0",
		"lucide-svelte": "^0.453.0",
		"postcss": "^8.4.47",
		"postcss-import": "^16.1.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.13",
		"typescript": "^5.0.0",
